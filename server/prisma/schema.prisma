generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id Int @id @default(autoincrement())
  firstName String
  lastName String
  email String @unique
  password String
  accounts Account[]
  incomes Income[]
  expenses Expense[]
  watchlist Watchlist[]
}

model Account {
  id Int @id @default(autoincrement())
  student Student @relation(fields: [studentId], references: [id])
  studentId Int
  accountNumber String
  accountName String
  cardExpiryDate DateTime
  expenses Expense[]
}

model Income {
  id Int @id @default(autoincrement())
  student Student @relation(fields: [studentId], references: [id])
  studentId Int
  incomeName String
  incomeType String
  incomeAmount Float
  incomeStartDate DateTime
  incomeEndDate DateTime
}

model Expense {
  id Int @id @default(autoincrement())
  student Student @relation(fields: [studentId], references: [id])
  studentId Int
  account Account @relation(fields: [accountId], references: [id])
  accountId Int
  expenseType String
  expenseName String
  expenseAmount Int
  expenseDescription String?
  expenseDate DateTime
  isRecurring Boolean @default(false)
}

model Watchlist {
  id Int @id @default(autoincrement())
  student Student @relation(fields: [studentId], references: [id])
  studentId Int
  companyIcon String
  companyName   String
  companyAbbrev String
  stockPrice String
  performancePercentage String
}